@using Web.Core.Shared.Models.Navigation
@inherits LayoutComponentBase

<div class="container-fluid m-0 p-0 page-container">
    <div class="nav-container">
        <nav class="navbar navbar-expand-lg navbar-dark bg-dark">
            <div class="container-fluid navbar-toggler-container">
                <div class="brand-container" @onclick="@(_isExpanded ? Hide : Show)">
                    <i class="bi bi-list toggle-button"></i>
                    <a class="navbar-brand branding" href="#">My App</a>
                </div>
                <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#navbarNav" aria-controls="navbarNav" aria-expanded="false" aria-label="Toggle navigation">
                    <span class="navbar-toggler-icon"></span>
                </button>
                <div class="collapse navbar-collapse" id="navbarNav">
                    <NavList Css="header-nav" Expanded="@true" />
                </div>
            </div>
        </nav>
    </div>
    <div class="content-container">
        <div class="@(_isExpanded ? "expanded": "")" id="sidebar">
            <NavList Css="" Expanded="@_isExpanded" />
        </div>
        <div class="content-wrapper">
            @Body
        </div>
    </div>
</div>


<div id="blazor-error-ui">
    An unhandled error has occurred.
    <a href="" class="reload">Reload</a>
    <a class="dismiss">🗙</a>
</div>